@model IEnumerable<Tarefas.Models.UsuariosTarefasModel>
@using Tarefas.Extended

@{
    ViewBag.Title = "BuscarUsuarios";
}

<h2>BuscarUsuarios</h2>

<div class="form-inline">
    <input type="text" id="texto-pesquisa" class="form-control" />
    <button type="button" id="chk-pesquisar" class="btn btn-default" onclick="pesquisar()">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </button>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody></tbody>

</table>

<div>
    @Html.ActionLink("Voltar pra lista", "UsuariosTime", new { id = ViewBag.Time })
</div>

@section scripts {
    <script>
        function pesquisar() {
            var texto = $('#texto-pesquisa').val();

            $.get('@Url.Action("PesquisaUsuario")', { apelido: texto }, function (ret) {
                var html = '';

                $.each(ret, function (k, v) {
                    html += `
<tr>
    <td>
        ${v.Apelido}
    </td>
    <td>
        ${v.NomeCompleto}
    </td>
    <td>
        ${v.Email}
    </td>
    <td>
        <input type="checkbox" id="${v.Id}" onclick="add(this)" />
    </td>
</tr>`;
                });

                $('table tbody').empty().append(html);
            });
        }

        function add(el) {
            var chk = $(el);

            chk.attr('disabled', true);

            var idUsuario = chk.attr('id');

            $.ajax({
                url: '@Url.Action("AddUsuarioTime", "Times")',
                type: 'POST',
                dataType: 'json',
                data: { id: '@ViewBag.Time', idUsuario: idUsuario },
                error: function (x, y, z) {
                    // fazer o tratamento do erro
                },
                success: function (ret) {
                    chk.attr('disabled', false);
                }
            });
        }

        connectHub('@User.GetNickName()', false);
    </script>
}